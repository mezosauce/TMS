<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             xmlns:controls="clr-namespace:Time_Management_System.Control"  
             x:Class="Time_Management_System.Pages.CalendarPage"  
             Title="Worker Schedule">  

    <Grid RowSpacing="10" Padding="20">  
        <Grid.RowDefinitions>  
            <RowDefinition Height="Auto" />  
            <RowDefinition Height="*" />  
        </Grid.RowDefinitions>  

        <Label Text="Worker Schedule Calendar"  
               FontSize="24"  
               HorizontalOptions="Center"  
               Grid.Row="0" />  

        <controls:CalendarView  
            Grid.Row="1"  
            x:Name="Calendar"  
            VerticalOptions="Fill"  
            HorizontalOptions="Fill" />  
    </Grid>  
</ContentPage>


