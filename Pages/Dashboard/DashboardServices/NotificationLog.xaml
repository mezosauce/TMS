<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Time_Managmeent_System.Pages.Dashboard.DashboardServices.NotificationLog">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="Notifications" FontSize="24" FontAttributes="Bold" />

            <CollectionView x:Name="NotificationList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" Padding="10" Margin="5">
                            <VerticalStackLayout>
                                <Label Text="{Binding message}" FontSize="16" />
                                <Label Text="{Binding Send_Time}" FontSize="12" TextColor="Gray" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
