<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Time_Managmeent_System.Pages.Dashboard.DashboardServices.AssignShiftPage"
             Title="AssignShiftPage">
    <VerticalStackLayout>
        <Label 
            Text="Assign Following Shifts"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Picker
            Title="Select Shift"
            ItemsSource="{Binding ShiftOptions}"
            x:Name="ShiftPicker"
            Margin="10"
            HorizontalOptions="Center"
            VerticalOptions="Start" />
        
        <Label
            Text="Assign Employee:"
            FontSize="16"
            Margin="0,10,0,0"
            VerticalOptions="Center" />
        
        <Picker
            Title="Select Employee"
            ItemsSource="{Binding EmployeeOptions}"
            x:Name="EmployeePicker"
            Margin="10"
            HorizontalOptions="Center"
            VerticalOptions="Start" />
        
        <Label
            Text="Select Date:"
            FontSize="16"
            Margin="0,10,0,0"
            VerticalOptions="Center" />

                    <Picker
            Title="Select Date"
            ItemsSource="{Binding WeekdayDates}"
            x:Name="DatePicker"
            Margin="10"
            HorizontalOptions="Center"
            VerticalOptions="Start" />

        <Button
            Text="Assign Shift"
            Clicked="OnAssignShiftClicked"
            Margin="10"
            HorizontalOptions="Center"
            VerticalOptions="Start" />

                
    </VerticalStackLayout>
</ContentPage>