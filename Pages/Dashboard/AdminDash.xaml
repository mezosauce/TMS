<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Time_Managmeent_System.AwsomeFonts"
             x:Class="Time_Managmeent_System.Pages.Dashboard.AdminDash"
             Title="AdminDash">
    <ScrollView>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Side Panel -->
            <VerticalStackLayout Grid.Column="0"
                         BackgroundColor="lightgray"
                         Padding="10,0,10,10"
                         Spacing="20">

                <VerticalStackLayout
                    Padding="10, 50, 10, 60" >
                    <Label
                        Style="{x:StaticResource FaBrandIconStyle}"
                        Text="{x:Static models:SymbolCode.User}"
                        FontFamily="FaSolid"
                        FontSize="40"
                        HorizontalOptions="Center" 
                        VerticalOptions="Start"
                    />
                
                <Label
                    Text="[Admin Name]"
                    FontSize="20"
                    HorizontalOptions="Center"
                    />
                </VerticalStackLayout>
                <Button
                    Text="Worker Schedule"
                    WidthRequest="180"
                    Margin="0,0,0,10"
                    Style="{StaticResource HoverExpandButtonStyle}"
                    Clicked="OnWorkerScheduleClicked"
                />
            <Button
                Text="Reports"
                WidthRequest="180"
                Margin="0,0,0,10"
                Style="{StaticResource HoverExpandButtonStyle}"
                />
            <Button
                Text="Geo-Location"
                WidthRequest="180"
                Margin="0,0,0,10"
                Style="{StaticResource HoverExpandButtonStyle}"
                />
            <Button
                x:Name="TrackLocationButton"
                Text="Start Tracking"
                Clicked="OnTrackLocationClicked"
                WidthRequest="180"
                Margin="0,0,0,10"
                Style="{StaticResource HoverExpandButtonStyle}"
                />
            </VerticalStackLayout>

            <!-- Main Content -->
            <VerticalStackLayout Grid.Column="1"
                         Padding="20"
                         Spacing="15">

                <HorizontalStackLayout>
                    <VerticalStackLayout>
                        
                        <Label
                    x:Name="LocationLabel"
                    Text="Location: Unknown"
                    FontSize="16"
                    Margin="0,0,0,10"
                    HorizontalOptions="Start" />
                    </VerticalStackLayout>
                    <Label
                x:Name="EasternTimeLabel"
                Text="--:--:--"
                FontSize="38"
                Margin="120,0,0,0"
                HorizontalOptions="Center" />
                </HorizontalStackLayout>

                
            </VerticalStackLayout>

        </Grid>
    </ScrollView>
</ContentPage>