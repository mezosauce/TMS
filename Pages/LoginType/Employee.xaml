<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Time_Managmeent_System.Pages.LoginType.Employee"
             Title="Employee">
    <VerticalStackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center"
        Spacing="20"
        Padding="30">

        <Label 
            Text="Employee Login"
            FontSize="30"
            HorizontalOptions="Center" />

        <Entry 
            Placeholder="Username"
            WidthRequest="250" 
            x:Name = "EmailEntry"
            />
        

        <Entry
            Placeholder="Password"
            IsPassword="True"
            WidthRequest="250" 
            x:Name ="PasswordEntry"
            />
        <Button
            Text="Login"
            WidthRequest="250"
            Clicked="OnLoginClicked" />

    </VerticalStackLayout>
</ContentPage>